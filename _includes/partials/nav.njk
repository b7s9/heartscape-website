{% if navigation.items %}
  <nav class="p-4 space-x-4" aria-label="{{ ariaNavLabel }}">
    {% for item in navigation.items %}
      {% set externalAttribute = '' %}
      {% set currentAttribute = '' %}

      {% if item.external %}
        {% set externalAttribute = ' rel="external"' %}
      {% endif %}

      {% if page.url == item.url %}
        {% set currentAttribute = ' aria-current="page"' %}
      {% endif %}

      <a class="p-4 rounded bg-gray-100 hover:bg-gray-200" href="{{ item.url }}" {{ externalAttribute | safe }} {{ currentAttribute | safe }}>
        {{ item.text }}
      </a>
    {% endfor %}
  </nav >
{% endif %}
